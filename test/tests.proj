<Project ToolsVersion="15.0">

  <Import Project="Directory.Build.props" />

  <Target Name="Restore">
    <Exec Command='dotnet restore "sdk1/app c1" ' />
  </Target>

  <ItemGroup>
    <TestArgs Include="--fsc-args" />
    <TestArgs Include="--project-refs" />
    <TestArgs Include="--get-property AssemblyName" />
  </ItemGroup>

  <Target Name="Test">
    <Exec Command='dotnet run -p "$(RepoRootDir)/src/dotnet-proj-info/dotnet-proj-info.fsproj" -f netcoreapp2.0 -- "$(RepoRootDir)/test/sdk1/app c1/app c1.fsproj" %(TestArgs.Identity) -v' IgnoreStandardErrorWarningFormat="true" />
  </Target>

  <Target Name="VSTest" DependsOnTargets="Test" />

</Project>
